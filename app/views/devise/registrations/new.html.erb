<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0">
    <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
      <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
      Flowbite
    </a>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Create an account
        </h1>
        <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="mt-3">
            <%= f.label :email, class: label_class %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@company.com", class: text_field_class %>
          </div>

          <div class="mt-3">
            <%= f.label :password, class: label_class %><br/>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password", class: text_field_class %>
          </div>

          <div class="mt-3">
            <%= f.label :password_confirmation, class: label_class %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: text_field_class %>
          </div>

          <%= f.fields_for :personal_detail do |pd_f| %>
            <div class="mt-2">
              <%= pd_f.label :first_name, class: label_class %><br/>
              <%= pd_f.text_field :first_name, autofocus: true, autocomplete: "email", placeholder: "name@company.com", class: text_field_class %>
            </div>

            <div class="mt-2">
              <%= pd_f.label :last_name, class: label_class %><br/>
              <%= pd_f.text_field :last_name, autofocus: true, autocomplete: "email", placeholder: "name@company.com", class: text_field_class %>
            </div>

            <div class="mt-2">
              <%= pd_f.label :middle_name, class: label_class %><br/>
              <%= pd_f.text_field :middle_name, autofocus: true, autocomplete: "email", placeholder: "name@company.com", class: text_field_class %>
            </div>

            <div class="mt-2">
              <%= pd_f.label :phone_number, class: label_class %><br/>
              <%= pd_f.text_field :phone_number, autofocus: true, autocomplete: "email", placeholder: "name@company.com", class: text_field_class %>
            </div>
            <div class="mt-2">
              <%= pd_f.label 'date of Birth', class: label_class %><br/>
              <%= pd_f.date_field :date_of_birth, autofocus: true, autocomplete: "date_of_birth", placeholder: "name@company.com", class: text_field_class %>
            </div>

            <div class="mt-2">
              <%= pd_f.label :gender, class: label_class %><br/>
              <%= pd_f.text_field :gender, autofocus: true, autocomplete: "gender", placeholder: "gender", class: text_field_class %>
            </div>

            <div class="mt-2">
              <%= pd_f.label :city, class: label_class %><br/>
              <%= pd_f.text_field :city, autofocus: true, autocomplete: "city", placeholder: "city", class: text_field_class %>
            </div>
          <% end %>

          <%= f.submit "Sign up", class: submit_class %>
          <p class="text-sm font-light text-gray-500 dark:text-gray-400 my-3">
            Already have an
            account? <%= link_to "Sign in", user_session_path, class: "font-medium text-primary-600 hover:underline dark:text-primary-500" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>