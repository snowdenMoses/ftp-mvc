<div id="<%= dom_id role %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= role.title %>
  </p>

  <% if role.image.present? %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Image:</strong>
      <%= image_tag role.image, class: "w-40 h-40 mb-1 rounded" %>
    </p>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to "Show this role", role, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this role", edit_role_path(role), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
