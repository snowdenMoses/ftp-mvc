<div class="p-4 sm:ml-64 w-full">
  <div>
    <h1 class="font-bold text-4xl"><%="#{@role&.title.split("_").join(" ").capitalize} Role" %></h1>
  </div>
  <div class="flex justify-end items-center">
    <%= link_to "Add User", new_user_role_path(current_role: @role&.title, role_id: @role&.id ), class: "rounded-lg py-3 px-5 bg-slate-600 text-white block font-medium" %>
  </div>
  <div >
    <%= render partial: "user_role_table", locals: { records: @users, role_id: @role.id}%>
    <%= link_to "Back to roles", roles_path, class: "mt-3 ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
