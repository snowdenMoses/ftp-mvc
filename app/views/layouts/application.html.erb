<!DOCTYPE html>
<html>
<head>
  <title>Find That Plug</title>
  <%= favicon_link_tag 'logo.svg' %>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload", media: :all %>
  <%= javascript_importmap_tags %>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap"
    rel="stylesheet"
    />
</head>

<body>
<main class="container mx-auto px-5">
  <% if notice.present? %>
    <%= render partial: "shared/notice_toast_message", locals: { message: notice, message_type: "success" } %>
  <% elsif alert.present? %>
    <%= render partial: "shared/notice_toast_message", locals: { message: alert, message_type: "error" } %>
  <% end %>
  <% if current_user %>
    <div><%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete } %></div>
  <% end %>
  <div class="">
  <%= render "shared/header" %>
  </div>
  <div class="wrapper mt-4">
    <%= yield %>
  </div>
</main>
<!--<script src="../path/to/flowbite/dist/flowbite.min.js"></script>-->
</body>
</html>
