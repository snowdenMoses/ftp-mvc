<%= form_with model: [commentable, Comment.new] do |form| %>
  <div class="mt-3">
    <%= form.label "Voice out your comments", class: label_class %><br/>
    <%= form.text_area :content, placeholder: "make your comment", class: text_field_class %>
  </div>

    <%= form.submit "Comment", class: "text-white bg-slate-600 hover:bg-black focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 mt-3 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
  <% end %>