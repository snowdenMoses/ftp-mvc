
  <% query.each do |category| %>
    <%= link_to customers_category_path(category) do %>
      <div class="flex flex-col justify-center items-center">
        <div class="mb-2 flex flex-col justify-center items-center h-40 rounded-full w-full">
          <%= category.image.present? ? image_tag(category.image, alt: category.title, class: 'w-40 h-40 rounded-full object-contain') : image_tag("https://via.placeholder.com/200", alt: category.title, class: 'rounded-full') %>
        </div>
        <div class="mt-3 mb-4">
          <p><%= category.title %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>